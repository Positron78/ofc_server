{
  "name": "organicfreshcoffee-game-server",
  "version": "1.0.0",
  "description": "Express TypeScript WebSocket server for multiplayer game with Firebase auth and MongoDB",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate:dungeon": "npx ts-node migrate-dungeon.ts",
    "delete:dungeon": "npx ts-node delete-dungeon.ts",
    "test:dungeon": "npx ts-node test-dungeon.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "mongodb": "^6.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "express",
    "typescript",
    "websocket",
    "mongodb",
    "firebase",
    "multiplayer",
    "game"
  ],
  "author": "Organic Fresh Coffee",
  "license": "MIT"
}
